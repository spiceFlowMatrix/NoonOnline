            <io.github.kexanie.library.MathView
                android:id="@+id/txtAnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:textColor="@color/colorBlack">

            </io.github.kexanie.library.MathView>


