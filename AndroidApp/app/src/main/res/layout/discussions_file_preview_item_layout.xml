<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pdfopenLay"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDiscussionsFileIcon"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_margin="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_file" />

                <TextView
                    android:id="@+id/txtDiscussionsFileName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colormorelightGrayColor"
                    android:ellipsize="end"
                    android:gravity="center_vertical|center_horizontal"
                    android:maxLines="1"
                    android:padding="@dimen/_2sdp"
                    android:text=""
                    android:textColor="@color/colorMoreDarkGray"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgDiscussionsClose"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="end|top"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

</layout>