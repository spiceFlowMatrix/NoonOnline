<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">
            @font/bahij_helvetica_neue_bold
        </item>
        <!--<item name="searchViewStyle">@style/CustomSearchViewTheme</item>-->
    </style>


    <style name="EditTextTheme" parent="android:Widget">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint</item>
        <item name="errorTextAppearance">@style/TextAppearance.Design.Error</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/bahij_helvetica_neue_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme" parent="android:Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:textColor">@color/colorMoreDarkGray</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:fontFamily">
            @font/bahij_helvetica_neue_bold
        </item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/colorMoreDarkGray</item>
        <item name="android:fontFamily">@font/bahij_helvetica_neue_bold</item>
    </style>

    <style name="CustomSearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorHint">@color/colorMoreDarkGray</item>
        <item name="android:fontFamily">@font/bahij_helvetica_neue_bold</item>
        <!--<item name="android:queryBackground">@color/colorlightGray</item>-->
        <!--<item name="android:searchIcon">@null</item>-->
        <!--<item name="android:searchHintIcon">@null</item>-->
    </style>


    <style name="AppTheme.Transparent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="MenuStyle" parent="AppTheme">
        <!-- <item name="android:fontFamily">
             @font/bahij_helvetica_neue_bold
         </item>-->
    </style>

    <style name="MyProgressDialog" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:fontFamily">
            @font/bahij_helvetica_neue_bold
        </item>-->
    </style>

    <style name="checkBoxComponent" parent="AppTheme">
        //Checked color
        <item name="colorAccent">@color/colorPrimary</item>
        //Checkbox border color
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

</resources>
